{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": [
    "./hardhat.config.ts",
    "./deploy/**/*.ts",
    "./test/**/*.ts",
    "./scripts/**/*.ts"
  ]
}


